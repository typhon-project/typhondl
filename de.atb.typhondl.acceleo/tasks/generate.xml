<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="de.atb.typhondl.acceleo">
    <property name="ECLIPSE_HOME" value="../../../../eclipse/dsl-2018-12/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="de.atb.typhondl.acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/de.atb.typhondl.acceleo/bin"/>
    </path>

    <path id="de.atb.typhondl.acceleo.classpath">
        <path refid="de.atb.typhondl.acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="de.atb.typhondl.acceleo.libraryclasspath.alljars">
        <pathelement location="../de.atb.typhondl.acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="de.atb.typhondl.acceleo.classpath.alljars">
        <path refid="de.atb.typhondl.acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="de.atb.typhondl.acceleo.main.Generate" classpathref="de.atb.typhondl.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="de.atb.typhondl.acceleo.main.Generate" classpathref="de.atb.typhondl.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
