dbtype mongo

database orderdb : mongo {
	image = mongo:latest;
	restart = always;
	command = --smallfiles --wiredTigerCacheSizeGB 1.5;
    environment {
      "MONGO_INITDB_ROOT_USERNAME=root"
      "MONGO_INITDB_ROOT_PASSWORD=example"
    }
    entrypoint [
    	'/maven/wait-for.sh',
    	'mongo',
    	'-t',
    	'60'
    ]
}
